{
    "title": "PSX Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "symbols": {
            "title": "Stock Symbols",
            "type": "array",
            "description": "List of PSX stock symbols to scrape (e.g., SYS, OGDC, PPL, etc.)",
            "editor": "stringList",
            "prefill": ["SYS", "OGDC", "PPL"],
            "minItems": 1
        },
        "proxyConfiguration": {
            "title": "Proxy Configuration",
            "type": "object",
            "description": "Proxy settings for the scraper",
            "editor": "proxy",
            "default": {
                "useApifyProxy": true,
                "apifyProxyGroups": ["RESIDENTIAL"]
            }
        },
        "maxRequestRetries": {
            "title": "Max Request Retries",
            "type": "integer",
            "description": "Maximum number of times to retry a failed request",
            "default": 3,
            "minimum": 0,
            "maximum": 10
        }
    },
    "required": ["symbols"]
}
