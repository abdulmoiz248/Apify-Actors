{
  "actorSpecification": 1,
  "name": "pakistan-city-aqi-30days",
  "title": "Pakistan City AQI 30 Days Scraper",
  "version": "1.0.0",
  "description": "Scrapes the past N days of AQI for a city in Pakistan from IQAir or fallback source.",
  "minMemoryMbytes": 256,
  "maxMemoryMbytes": 4096,
  "dockerfile": "./Dockerfile",
  "readme": "./README.md",
  "input": "./input_schema.json",
  "output": {
    "actorOutputSchemaVersion": 1,
    "title": "Pakistan City AQI output schema",
    "description": "Schema for the dataset items produced by the AQI actor.",
    "type": "object",
    "properties": {
      "fetchedAt": { "type": "string", "format": "date-time" },
      "input": { "type": "object" },
      "sourceUrl": { "type": "string", "format": "uri" },
      "city": { "type": "string" },
      "province": { "type": ["string","null"] },
      "daysRequested": { "type": "integer" },
      "results": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "date": { "type": "string", "format": "date" },
            "aqi": { "anyOf": [ { "type": "integer" }, { "type": "null" } ] },
            "pm25": { "anyOf": [ { "type": "number" }, { "type": "null" } ] },
            "note": { "type": ["string","null"] }
          },
          "required": ["date","aqi"]
        }
      },
      "debugHtmlSnippet": { "type": ["string","null"] }
    },
    "required": ["fetchedAt","input","sourceUrl","city","results"]
  },
  "environmentVariables": {
    "CRAWLEE_HEADLESS": "1",
    "CRAWLEE_STORAGE_DIR": "./storage"
  }
}
